QMainWindow{
    background-color: #6d6d6d;} /* search replace all */

QLabel{
    color:white;}

QLineEdit{
    background-color:#414141; /* search replace all */
    color: white;
    border-radius: 3px;
    padding: 3px;
    selection-background-color: #6d6d6d; /* probable replace */
    selection-color: white;}

QTextEdit{
    color:white;
    background-color:#414141;
    border-radius: 3px;
    padding: 3px;
    selection-background-color: #6d6d6d; /* probable replace */
    selection-color: white;}

QPushButton{
    color:white;
    background-color: #414141;
    border-radius: 10px;}

/* Tray theming is diff in 5.12 & 5.14 ; we'll set the tray manualy */
/* so it will behave the same in both versions.  Next 3 for tray */
QMenu {
    background-color: #6d6d6d;
    color: white;}

/* this is mouse over colors for the context menu */
QMenu::item:selected {
    background-color: #414141;} /* probable replace */

/* this is colors when an item is disabled */
QMenu::item::disabled {
    background-color: #6d6d6d;
    color: #858A96;}

QMessageBox {
    background-color: #6d6d6d;}

QMessageBox, QPushButton {
    background-color: #414141;
    border: none;
    border-radius: 10px;
    padding: 8px;
    color: white;}

QMessageBox, QPushButton:hover{
    background: green;}

/* this must be declared *AFTER* QMessageBox or it won't work */
QDialog {
    background-color: #6d6d6d;}

QDialog, QLabel{
    background-color: #6d6d6d;}

QDialog, QPushButton:focus{
    outline: 1px;}

QTooltip{
    background-color: green;}

QFileDialog QWidget {
    background-color: #6d6d6d;
    color: white;}

QComboBox, QListView {
    background-color: #6d6d6d;
    color: white;
    selection-color: white;
    selection-background-color: #414141;}
